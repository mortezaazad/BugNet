@page
@model BugNet.Pages.IndexModel
@{
}
<h1>Welcome Morteza</h1>
<a asp-page="./create" class="btn btn-sm btn-info">Create New bug</a>
<table class="table">
    <thead>
        <tr>
            <td>Name</td>
            <td>Desc.</td>
            <td>Is Done</td>
            <td>Operation</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BugList)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.IsDone</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

